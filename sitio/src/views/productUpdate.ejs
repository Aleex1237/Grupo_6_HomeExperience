<!DOCTYPE html>
<html lang="es">
  <%- include("./partials/head")%>
<body class="productUpdate">
  <%- include("./partials/header")%>
    <main>
        <h1>Modificar experiencia</h1>
        <form action="/admin/producto/modificar/<%=producto.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="nombre">
            <input class="nombre" type="text" name="nombre" id="nombre" value="<%=locals.old ? old.nombre : producto.name%>">
            <% if (locals.errors && errors.nombre) { %>
              <p class="text-danger"><%= errors.nombre.msg %> </p>
            <% } %>
          </div>
          <div class="contenedor">
              <div class="caja1">
                  <textarea name="descripcion" cols="30" rows="10" ><%=locals.old  ? old.descripcion : producto.description%></textarea>
                  <% if (locals.errors && errors.descripcion) { %>
                    <p class="text-danger"><%= errors.descripcion.msg %> </p>
                  <% } %>
                  <div class="contenedor2">
                    <div>
                      <input class="precio" type="text" name="precio" id="precio" value="<%=locals.old ? old.precio : producto.price%>">
                      <% if (locals.errors && errors.precio) { %>
                        <p class="text-danger"><%= errors.precio.msg %> </p>
                      <% } %>
                      <select name="categoria">
                        <option value=1 <%=producto.idCategory===1?"selected":null%>>Bar</option>
                        <option value=2 <%=producto.idCategory===2?"selected":null%>>Cine</option>
                      </select>
                      <% if (locals.errors && errors.categoria) { %>
                        <p class="text-danger"><%= errors.categoria.msg %> </p>
                      <% } %>
                    </div>
                    <div class="div-imagen" id="input-file">
                      <input class="input-file" type="file" name="imagen" placeholder="+ FOTO" value="<%=producto.image%>">
                    </div>
                    
                  </div>
                  <div>
                    <input class="precio" type="text" name="keywords" id="keywords" placeholder="Palabras relacionadas" value="<%=keywords%>" required>
                    <% if (locals.errors && errors.keywords) { %>
                      <p class="text-danger"><%= errors.keywords.msg %> </p>
                    <% } %>
                  </div>
              </div>
              <div class="caja2">
                    <h3>Productos incluidos en la experiencia:</h3>
                    <br>
                    <input class="precio" type="text" name="product1" id="keywords" placeholder="Agregar producto" value="<%=locals.old  ? old.product1 : (producto.products[0] ? producto.products[0].name : "")%>" required>
                    <% if (locals.errors && errors.product1) { %>
                      <p class="text-danger"><%= errors.product1.msg %> </p>
                    <% } %>
                    <input class="precio" type="text" name="product2" id="keywords" placeholder="Agregar producto"  value="<%=locals.old  ? old.product2 : (producto.products[1] ? producto.products[1].name : "")%>" >
                    <% if (locals.errors && errors.product2) { %>
                      <p class="text-danger"><%= errors.product2.msg %> </p>
                    <% } %>
                    <input class="precio" type="text" name="product3" id="keywords" placeholder="Agregar producto"  value="<%=locals.old  ? old.product3 : (producto.products[2] ? producto.products[2].name : "")%>" >
                    <% if (locals.errors && errors.product3) { %>
                      <p class="text-danger"><%= errors.product3.msg %> </p>
                    <% } %>
                    <input class="precio" type="text" name="product4" id="keywords" placeholder="Agregar producto"  value="<%=locals.old  ? old.product4 : (producto.products[3] ? producto.products[3].name : "")%>"  >  
                    <% if (locals.errors && errors.product4) { %>
                      <p class="text-danger"><%= errors.product4.msg %> </p>
                    <% } %>
              </div>
          </div> 
          <div>
            <button type="submit">GUARDAR</button>
          </div>
        </form>
        
    </main>
    <%- include("./partials/footer")%>
    <%- include("./partials/scripts")%>
</body>
</html>